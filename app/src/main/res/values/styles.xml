<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailCollapsedTextStyle">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DetailExpandedTextStyle">
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:color">@color/color_black</item>
    </style>

    <style name="NumberPickerTextStyle">
        <item name="android:color">@color/color_black</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
