<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorWhite</item>

    </style>

    <style name="DetailCollapsedTextStyle">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DetailExpandedTextStyle">
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:color">@color/colorBlack</item>
    </style>

    <style name="NumberPickerTextStyle">
        <item name="android:color">@color/colorBlack</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchTitleTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
